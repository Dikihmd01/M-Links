<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/screen"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".AddDataActivity">

    <TextView
        android:id="@+id/page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="Form Add Data"
        android:textColor="@color/text_gelap"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Name App or Website:"
        android:textColor="@color/text_gelap"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/nama_aplikasi"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/text_gelap"
        android:background="@drawable/search"
        android:textColorHint="@color/text_gelap" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Description:"
        android:textColor="@color/text_gelap"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/deskripsi"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:inputType="textMultiLine"
        android:textColor="@color/text_gelap"
        android:textColorHint="@color/text_gelap" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Link:"
        android:textColor="@color/text_gelap"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/link"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/search"
        android:textColor="@color/text_gelap"
        android:textColorHint="@color/text_gelap" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Upload a File:"
        android:textColor="@color/text_gelap"
        android:textSize="16dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/login_terang"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="150dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:text="Save"
            android:textAllCaps="false"
            style="@style/saveButton"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="150dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:text="Cancel"
            android:textAllCaps="false"
            style="@style/saveButton"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>