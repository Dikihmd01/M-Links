<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gelap"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".AddDataActivity">

    <TextView
        android:id="@+id/page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="Form Add Data"
        android:textColor="@color/text_gelap"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Name App or Website:"
        android:textColor="@color/text_gelap"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/nama_aplikasi"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/search"
        android:textColorHint="@color/text_gelap" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Description:"
        android:textColor="@color/text_gelap"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/deskripsi"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/deskripsi"
        android:inputType="textMultiLine"
        android:textColorHint="@color/text_gelap" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Link:"
        android:textColor="@color/text_gelap"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/link"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/search"
        android:textColorHint="@color/text_gelap" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Upload a File:"
        android:textColor="@color/text_gelap"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@drawable/search"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/btn_add_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_gelap"
            android:paddingTop="-10dp"
            android:paddingBottom="-5dp"
            android:text="Choose File"
            android:textAllCaps="false"
            android:textColor="@color/text_gelap"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="No File Selected"
            android:textColor="@color/text_gelap" />

    </LinearLayout>

<!--    <ImageView-->
<!--        android:id="@+id/imagePreview"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="150dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_gelap"
            android:text="Save"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="150dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_gelap"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>